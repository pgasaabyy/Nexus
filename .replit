modules = ["web", "nodejs-20", "bash", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["freetype", "glibcLocales", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "pgadmin4", "tcl", "tk", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Django Server"

[[workflows.workflow]]
name = "Start Django Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash run.sh"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 33863
externalPort = 3000

[[ports]]
localPort = 33997
externalPort = 3001

[[ports]]
localPort = 37583
externalPort = 3002

[deployment]
deploymentTarget = "autoscale"
run = ["python3.11", "manage.py", "runserver", "0.0.0.0:5000"]
build = ["python3.11", "manage.py", "collectstatic", "--noinput", "--clear"]
